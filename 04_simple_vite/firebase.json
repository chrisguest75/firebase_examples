{
  "functions": [
    {
      "source": "backend",
      "codebase": "default",
      "runtime": "nodejs22",
      "ignore": [
        "**/node_modules/**",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix ./backend run build"
      ]
    }
  ],
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
        "npm --prefix ./frontend run build"
    ]    
  }
}